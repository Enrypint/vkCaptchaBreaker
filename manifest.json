{
  "manifest_version": 2,
  "name": "VKAutoCaptcha",
  "description": "Extension adapted for automatic captcha solving on vk.com",
  "author": "Defasium (https://github.com/Defasium) and Eremey (https://github.com/eremeyko)",
  "version": "1.6.4",
  "permissions": ["storage", "tabs", "*://api.vk.com/*", "*://vk.com/*"],
   "background": {
       "scripts": [
         "background.js"
       ],
       "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["*://vk.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {"16": "icon16.png",
            "48": "icon48_1.png",
            "128": "icon128.png"},
  "browser_action": {
    "default_icon": "icon48_0.png"
  }
}